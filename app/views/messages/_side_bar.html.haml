.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul
        %li<
          = link_to new_group_path , class: "side-header__icon" do
            %i.fa.fa-pen-square.icon
        %li<
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message